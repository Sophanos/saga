{
  "name": "@mythos/tauri",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:editor": "cd ../../packages/editor-webview && bun run build",
    "copy:editor": "mkdir -p src-tauri/resources/editor && cp -r ../../packages/editor-webview/build/* src-tauri/resources/editor/",
    "prebuild": "bun run build:editor && bun run copy:editor",
    "preview": "vite preview",
    "tauri:dev": "tauri dev",
    "tauri:build": "bun run prebuild && tauri build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@convex-dev/better-auth": "^0.10.9",
    "@mythos/auth": "workspace:*",
    "@mythos/core": "workspace:*",
    "@mythos/editor-webview": "workspace:*",
    "@mythos/manifest": "workspace:*",
    "@mythos/theme": "workspace:*",
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-deep-link": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "better-auth": "1.4.9",
    "convex": "^1.31.2",
    "lucide-react": "^0.454.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.0.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "typescript": "~5.7.2",
    "vite": "^5.4.10"
  }
}

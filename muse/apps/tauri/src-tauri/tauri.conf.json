{
  "$schema": "https://tauri.app/schema/v2/config.json",
  "productName": "Mythos",
  "version": "0.0.1",
  "identifier": "vision.cascada.mythos",
  "build": {
    "beforeBuildCommand": "bun run build",
    "beforeDevCommand": "bun run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Mythos",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "acceptFirstMouse": true,
        "tabbingIdentifier": "mythos-editor"
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost https://convex.cascada.vision https://cascada.vision wss://convex.cascada.vision; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; frame-src 'self' asset: http://asset.localhost http://localhost:*; img-src 'self' asset: http://asset.localhost blob: data: https:; connect-src 'self' https://convex.cascada.vision https://cascada.vision wss://convex.cascada.vision",
      "assetProtocol": {
        "enable": true,
        "scope": ["$RESOURCE/**"]
      }
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["mythos"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "category": "Productivity",
    "shortDescription": "AI-powered creative writing environment",
    "longDescription": "Mythos is an AI-powered creative writing environment with story-as-code methodology, entity tracking, and intelligent feedback.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/editor/"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "exceptionDomain": null,
      "signingIdentity": null,
      "entitlements": null
    }
  }
}

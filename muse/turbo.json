{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:web": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "e2e": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": ["playwright-report/**", "test-results/**", ".playwright/**"]
    },
    "clean": {
      "cache": false
    },
    "tauri:dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@mythos/editor-webview#dev"]
    },
    "tauri:build": {
      "dependsOn": ["@mythos/editor-webview#build", "^build"],
      "outputs": ["src-tauri/target/**", "src-tauri/resources/**"]
    },
    "@mythos/editor-webview#build": {
      "outputs": ["build/**"]
    }
  }
}

{
  "name": "@mythos/db",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./queries/*": {
      "types": "./src/queries/*.ts",
      "default": "./src/queries/*.ts"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "db:generate": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > src/types/database.ts"
  },
  "dependencies": {
    "@mythos/storage": "workspace:*",
    "@supabase/supabase-js": "^2.47.12"
  },
  "devDependencies": {
    "@mythos/core": "workspace:*",
    "@mythos/state": "workspace:*",
    "@mythos/typescript-config": "workspace:*",
    "typescript": "^5.7.2"
  }
}

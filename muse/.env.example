# Supabase
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Convex (self-hosted)
# API endpoint for real-time database and HTTP Actions
VITE_CONVEX_URL=https://api.cascada.vision
# Set to 'true' to route AI calls to Convex HTTP Actions instead of Supabase Edge Functions
VITE_USE_CONVEX_AI=false

# OpenRouter (primary AI provider)
VITE_OPENROUTER_API_KEY=your-openrouter-api-key
VITE_OPENROUTER_SITE_URL=http://localhost:3000
VITE_OPENROUTER_APP_NAME=Mythos IDE

# Web app base URL (used by the marketing site for /login, /signup, /try redirects)
VITE_WEB_APP_URL=http://localhost:3005
# Optional: force the web app dev server port (falls back to VITE_WEB_APP_URL port)
VITE_WEB_APP_PORT=3005

# OpenRouter Trial API Key (optional - for anonymous trial, separate from main key for cost isolation)
OPENROUTER_TRIAL_API_KEY=your-openrouter-trial-api-key

# Anonymous Trial Configuration
ANON_JWT_SECRET=your-random-secret-for-signing-anonymous-tokens
ANON_TRIAL_LIMIT=5

# Google AI (Gemini) - fallback provider
VITE_GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-api-key

# Stripe (billing)
STRIPE_SECRET_KEY=your-stripe-secret-key
APP_URL=http://localhost:5173

# Email Invitations (Resend) - for collaboration features
RESEND_API_KEY=your-resend-api-key
INVITE_FROM_EMAIL=Mythos <noreply@mythos.dev>

# Qdrant Vector Database
# Used by edge functions for semantic search and memory
QDRANT_URL=https://qdrant.cascada.vision
QDRANT_API_KEY=your-qdrant-api-key
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET=saga-backups

# AI DevTools (Development/Debugging)
# Enable detailed logging of AI model interactions in edge functions
# Note: @ai-sdk/devtools is Node.js-only; this uses Edge-compatible logging middleware
# Logs include: request/response timing, token usage, model parameters
# WARNING: May expose sensitive data in logs - use only in development
ENABLE_AI_DEVTOOLS=false

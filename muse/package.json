{
  "name": "mythos-ide",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "dev": "turbo dev --filter=!@mythos/mobile",
    "dev:expo": "bun run --filter @mythos/expo dev",
    "dev:expo:web": "bun run --filter @mythos/expo dev:web",
    "dev:editor": "bun run --filter @mythos/editor-webview dev",
    "dev:tauri": "turbo run tauri:dev --filter @mythos/tauri",
    "build": "turbo build",
    "build:tauri": "turbo run tauri:build --filter @mythos/tauri",
    "build:editor": "bun run --filter @mythos/editor-webview build",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "typecheck": "turbo typecheck",
    "e2e": "PLAYWRIGHT_TARGETS=expo-web,tauri-web node ./node_modules/.bin/playwright test -c e2e/playwright.config.cjs --project=expo-web --project=tauri-web",
    "e2e:expo": "PLAYWRIGHT_TARGETS=expo-web node ./node_modules/.bin/playwright test -c e2e/playwright.config.cjs --project=expo-web",
    "e2e:tauri": "PLAYWRIGHT_TARGETS=tauri-web node ./node_modules/.bin/playwright test -c e2e/playwright.config.cjs --project=tauri-web",
    "e2e:ui": "node ./node_modules/.bin/playwright test -c e2e/playwright.config.cjs --ui",
    "e2e:typecheck": "node ./node_modules/.bin/tsc -p e2e/tsconfig.json --noEmit",
    "e2e:install": "node ./node_modules/.bin/playwright install --with-deps"
  },
  "devDependencies": {
    "@ai-sdk/provider": "^3.0.2",
    "@playwright/test": "^1.53.0",
    "@types/bun": "^1.1.14",
    "@types/node": "^25.0.3",
    "convex-test": "^0.0.38",
    "eslint": "^8.57.0",
    "playwright": "^1.57.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "packageManager": "bun@1.1.38",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.1",
    "@ai-sdk/deepinfra": "^0.1.3",
    "@ai-sdk/google": "^3.0.1",
    "@ai-sdk/openai": "^3.0.1",
    "@better-auth/expo": "^1.4.10",
    "@convex-dev/agent": "0.3.2",
    "@convex-dev/better-auth": "^0.10.9",
    "@convex-dev/presence": "^0.3.0",
    "@convex-dev/prosemirror-sync": "^0.2.0",
    "@convex-dev/rate-limiter": "^0.3.2",
    "@mythos/editor": "workspace:*",
    "@tanstack/react-query": "^5.90.16",
    "@tiptap/core": "^2.10.0",
    "@tiptap/extension-unique-id": "^2.10.0",
    "@tiptap/pm": "^2.10.0",
    "ai": "6.0.23",
    "better-auth": "1.4.9",
    "convex": "^1.31.2",
    "dev": "^0.1.3",
    "idb-keyval": "^6.2.2",
    "react-native-web": "^0.21.2",
    "zod": "^3.24.1"
  }
}

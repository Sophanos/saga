{
  "name": "mythos-ide",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:expo": "bun run --filter @mythos/expo dev",
    "dev:expo:web": "bun run --filter @mythos/expo dev:web",
    "dev:editor": "bun run --filter @mythos/editor-webview dev",
    "dev:tauri": "turbo run tauri:dev --filter @mythos/tauri",
    "build": "turbo build",
    "build:tauri": "turbo run tauri:build --filter @mythos/tauri",
    "build:editor": "bun run --filter @mythos/editor-webview build",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "convex-test": "^0.0.38",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "bun@1.1.38",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.1",
    "@better-auth/expo": "^1.4.10",
    "@convex-dev/agent": "^0.3.2",
    "@convex-dev/better-auth": "^0.10.9",
    "@tanstack/react-query": "^5.90.16",
    "ai": "^6.0.3",
    "better-auth": "1.4.9",
    "convex": "^1.31.2",
    "dev": "^0.1.3",
    "idb-keyval": "^6.2.2",
    "zod": "^3.24.1"
  }
}

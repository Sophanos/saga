{
  "name": "mythos-ide",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:expo": "bun run --filter @mythos/expo dev",
    "dev:expo:web": "bun run --filter @mythos/expo dev:web",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "bun@1.1.38",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.16",
    "convex": "^1.31.2",
    "dev": "^0.1.3",
    "idb-keyval": "^6.2.2"
  }
}
